<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/bg_bottom_sheet_dialog"
        android:orientation="vertical">

    <ImageView
            android:id="@+id/onboarding_banner_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/first_win" />

    <TextView
            android:id="@+id/feature_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="32dp"
            android:fontFamily="@font/ubuntu_medium"
            android:gravity="center"
            tools:text="@tools:sample/lorem"
            android:textColor="#FF805E"
            android:textSize="24sp"
            android:textStyle="bold" />

    <TextView
            android:id="@+id/first_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="14dp"
            android:layout_marginRight="32dp"
            android:fontFamily="@font/ubuntu_medium"
            tools:text="@tools:sample/lorem"
            android:textAlignment="center"
            android:textSize="14sp" />

    <TextView
            android:id="@+id/second_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="32dp"
            android:fontFamily="@font/ubuntu"
            tools:text="@tools:sample/lorem"
            android:textAlignment="center"
            android:textColor="#666666"
            android:textSize="14sp" />

    <TextView
            android:id="@+id/auth_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/bg_settings_sign_up_button"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            tools:text="@tools:sample/lorem" />

    <TextView
            android:id="@+id/skip_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="60dp"
            android:background="@drawable/bg_settings_sign_in_button"
            android:gravity="center"
            android:textSize="16sp"
            tools:text="@tools:sample/lorem" />

</LinearLayout>