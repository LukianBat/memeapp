<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/close_onboarding_dialog_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="33dp"
        android:padding="10dp"
        app:srcCompat="@drawable/ic_close_dialog" />

    <ImageView
        android:id="@+id/onboarding_banner_view"
        android:layout_width="match_parent"
        android:layout_height="248dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="48dp"
        android:layout_marginRight="15dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/onboarding_banner" />

    <TextView
        android:id="@+id/feature_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="48dp"
        android:layout_marginRight="32dp"
        android:fontFamily="@font/ubuntu_bold"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="В первый раз?" />

    <TextView
        android:id="@+id/feature_definition_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="60dp"
        android:fontFamily="@font/ubuntu"
        android:textAlignment="center"
        android:textColor="#666666"
        android:textSize="16sp"
        tools:text="У тебя есть всего 15 секунд на выбор самой смешной картинки из пары.\nПомоги смешным мемам выиграть эту битву и получи за это очки." />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="45dp"
        app:srcCompat="@drawable/ic_ellipse_onboarding" />

    <TextView
        android:id="@+id/ok_button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="47dp"
        android:background="@drawable/bg_settings_sign_up_button"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        tools:text="Погнали" />

</LinearLayout>
</ScrollView>
