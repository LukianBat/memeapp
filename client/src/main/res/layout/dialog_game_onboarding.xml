<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/close_onboarding_dialog_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="43dp"
        app:srcCompat="@drawable/ic_close_dialog" />

    <ImageView
        android:id="@+id/onboarding_banner_view"
        android:layout_width="match_parent"
        android:layout_height="248dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="58dp"
        android:layout_marginRight="15dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/onboarding_banner" />

    <TextView
        android:id="@+id/feature_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="48dp"
        android:layout_marginRight="32dp"
        android:fontFamily="@font/ubuntu_bold"
        android:gravity="center"
        android:text="@string/onboarding_title"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/feature_definition_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="60dp"
        android:fontFamily="@font/ubuntu"
        android:text="@string/onboarding_text"
        android:textAlignment="center"
        android:textColor="#666666"
        android:textSize="16sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="45dp"
        app:srcCompat="@drawable/ic_ellipse_onboarding" />

    <TextView
        android:id="@+id/ok_button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="47dp"
        android:background="@drawable/bg_settings_sign_up_button"
        android:gravity="center"
        android:text="@string/onboarding_ok_btn_text"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

</LinearLayout>